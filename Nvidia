from pypresence import Presence
import time
import psutil
import pynvml

time.sleep(1)

pynvml.nvmlInit()

client_id = айди Бота дискорда
#Пример client_id = 1107349645656588412
RPC: Presence = Presence(client_id)
ButtonsList= [
                {
                    "label": "Telegram",
                    "url": "https://t.me/TREEWOOD2"
                },
                {
                    "label": "Яндекс.музыка",
                    "url": "https://music.yandex.ru/users/kutsenko.german/playlists"
                }
            ]

RPC.connect()

device_count = pynvml.nvmlDeviceGetCount()
if device_count == 0:
    print("Video not found")
    has_video_card = False
else:
    has_video_card = True

while True:
    time.sleep(1)
    ram_percent=psutil.virtual_memory().percent
    cpu_percent=psutil.cpu_percent()
    
    if has_video_card:
        device_count = pynvml.nvmlDeviceGetCount()
        gpu_utilization = ''
        for i in range(device_count):
            handle = pynvml.nvmlDeviceGetHandleByIndex(i)
            gpu_utilization += f"{pynvml.nvmlDeviceGetUtilizationRates(handle).gpu / 10:.1f}% "
    else:
        gpu_utilization = ''
 # здесь отоброжение в приложение
    RPC.update(details=f"RAM: {ram_percent}% CPU: {cpu_percent}% GPU: {gpu_utilization}",
            large_image='https://i.postimg.cc/yx2QMd9g/standard.gif',
            large_text='TREEWOOD',
            buttons=ButtonsList,
    )
    
pynvml.nvmlShutdown()
